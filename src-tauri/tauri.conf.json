{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "Hourglass",
  "version": "0.1.0",
  "identifier": "com.hourglass.desktop",
  "build": {
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "yarn build",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": false,
    "windows": [
      {
        "title": "Hourglass",
        "width": 1000,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "transparent": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "Hourglass Developer",
    "resources": [],
    "externalBin": [],
    "copyright": "Â© 2024 Hourglass",
    "category": "DeveloperTool",
    "shortDescription": "A productivity timer application",
    "longDescription": "Hourglass is a modern productivity timer application built with Tauri",
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "",
      "exceptionDomain": ""
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    }
  },
  "plugins": {
    "updater": {
      "active": false
    }
  }
}